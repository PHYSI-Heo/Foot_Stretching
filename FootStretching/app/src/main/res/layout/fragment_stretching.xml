<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".StretchingFragment">

    <LinearLayout
        android:id="@+id/layout_start_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp">

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:text="Start"
            android:enabled="false"
            android:theme="@style/BtnTheme"
            style="@style/Widget.AppCompat.Button.Colored"/>

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:text="Stop"
            android:theme="@style/BtnTheme"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_set_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_start_btns"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_left_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angle : UP 30 도"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_left_move_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moving Time : 5 Sec"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_left_angle"/>

            <TextView
                android:id="@+id/tv_left_hold_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holding  Time : 5 Sec"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_left_move_time"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:elevation="8dp"
            android:background="@color/colorAccent">


            <TextView
                android:id="@+id/tv_right_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Angle : UP 30 도"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_right_move_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Moving Time : 5 Sec"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_right_angle"/>

            <TextView
                android:id="@+id/tv_right_hold_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Holding  Time : 5 Sec"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_right_move_time"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_direction"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp">

        <com.physis.foot.stretching.widget.MoveWinker
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"/>

        <com.physis.foot.stretching.widget.MoveWinker
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_foot"
        android:layout_below="@id/layout_set_info"
        android:layout_above="@id/layout_direction"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>