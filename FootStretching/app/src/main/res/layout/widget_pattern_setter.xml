<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbtn_angle_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="UP"/>

        <RadioButton
            android:id="@+id/rbtn_angle_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOWN"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_vertical_angle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/rbtn_vertical_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="0°"
            android:tag="0"
            android:layout_marginEnd="4dp"/>
        <RadioButton
            android:id="@+id/rbtn_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15°"
            android:tag="1"
            android:layout_marginHorizontal="4dp"/>
        <RadioButton
            android:id="@+id/rbtn_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30°"
            android:tag="2"
            android:layout_marginHorizontal="4dp"/>
        <RadioButton
            android:id="@+id/rbtn_vertical_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45°"
            android:tag="3"
            android:layout_marginStart="4dp"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDisable"
        android:layout_marginVertical="4dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbtn_angle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="LEFT"/>
        <RadioButton
            android:id="@+id/rbtn_angle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RIGHT"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_horizontal_angle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/rbtn_horizontal_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="0°"
            android:tag="0"
            android:layout_marginHorizontal="8dp"/>

        <RadioButton
            android:id="@+id/rbtn_horizontal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5°"
            android:tag="1"
            android:layout_marginHorizontal="8dp"/>

        <RadioButton
            android:id="@+id/rbtn_horizontal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10°"
            android:tag="2"
            android:layout_marginHorizontal="8dp"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDisable"
        android:layout_marginVertical="4dp"/>

    <CheckBox
        android:id="@+id/cb_returnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Returnable"/>

    <EditText
        android:id="@+id/et_moving_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Moving Speed ( 1 ~ 5 )"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_holding_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Holding Time ( Sec )"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"/>


</LinearLayout>